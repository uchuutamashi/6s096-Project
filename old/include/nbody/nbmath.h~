#ifndef _NBMATH_H
#define _NBMATH_H

#include <nbody/nbody.h>

namespace nbody{   
  //math functions
  inline Vector3d Gravity(const nbody::Body& source, const nbody::Body& body){ //calculate the acceleration due to source on the body
    Vector3d r = source.pos()-body.pos();
    return (source.mass()/r.normsq())*r;
  }

  inline Vector3d Integrate(const TimeSeries& init_val, const TimeSeries& rate){ //calculate the next value from old value and rate of change
    return init_val.back() + rate.back() * DELTA;
  }
}//namespace nbody

#endif //_NBMATH_H
